<?xml version="1.0" encoding="utf-8"?>
<!-- CLIENT APP MANIFEST -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.visgupta.example.binderclient">

    <!-- Permission to access the server app's service -->
    <uses-permission android:name="com.visgupta.example.BINDER_SERVICE" />
    
    <!-- For Android 11+ package visibility -->
    <queries>
        <package android:name="com.visgupta.example.binderserver" />
        <intent>
            <action android:name="com.visgupta.example.BINDER_TEST_SERVICE" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Binder Client App"
        android:theme="@style/Theme.BinderClient">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Binder IPC Client">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
