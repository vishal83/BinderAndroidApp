<?xml version="1.0" encoding="utf-8"?>
<!-- SERVER APP MANIFEST -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.visgupta.example.binderserver">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Binder Server App"
        android:theme="@style/Theme.BinderServer">
        
        <!-- Exported Binder Service - accessible by other apps -->
        <service
            android:name=".BinderTestService"
            android:enabled="true"
            android:exported="true"
            android:permission="com.visgupta.example.BINDER_SERVICE">
            
            <!-- Intent filter allows other apps to find this service -->
            <intent-filter>
                <action android:name="com.visgupta.example.BINDER_TEST_SERVICE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
        
    </application>

    <!-- Custom permission for service access -->
    <permission
        android:name="com.visgupta.example.BINDER_SERVICE"
        android:label="Access Binder Test Service"
        android:description="Allows access to the Binder IPC test service"
        android:protectionLevel="normal" />

</manifest>
